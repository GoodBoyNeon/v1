---
import { links } from "../../data/links";

export async function getStaticPaths() {
  return [
    {
      params: { site: "github" },
    },
    {
      params: { site: "discord" },
    },
    {
      params: { site: "twitter" },
    },
    {
      params: { site: "mail" },
    },
  ];
}

const { site } = Astro.params;
const siteLink: string = links[site || ""];
---

<head>
  <meta http-equiv="refresh" content={`0; url=${siteLink}`} />
</head>
